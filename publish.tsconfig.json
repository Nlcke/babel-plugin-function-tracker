{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.js"]
}
